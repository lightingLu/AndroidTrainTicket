<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:layout_height="85dp">

    <TextView
        android:id="@+id/rc_chename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:text="ZZ235"
        android:textColor="@color/tv_color"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rc_from_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/start_station" />

            <TextView
                android:id="@+id/rc_from_time"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/rc_from_img"
                android:padding="2dp"
                android:text="10:30"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/rc_from_statio"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/rc_from_time"
                android:text="长沙"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_top">

            <ImageView
                android:id="@+id/rc_to_img"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:background="@mipmap/end_startion" />

            <TextView
                android:id="@+id/rc_to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"

                android:layout_toRightOf="@+id/rc_to_img"
                android:padding="2dp"
                android:text="13:13"
                android:textColor="@color/tv_color" />

            <TextView
                android:id="@+id/rc_to_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/rc_to_time"
                android:text="长沙"
                android:textColor="@color/tv_color" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/rc_lishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07小时58分钟" />

        <TextView
            android:id="@+id/rc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_lishi"
            android:layout_marginTop="3dp"
            android:text="￥98.00" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rc_chename"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rc_first"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="硬座(121)" />

        <TextView
            android:layout_marginLeft="15dp"

            android:id="@+id/rc_second"
             android:layout_toRightOf="@+id/rc_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="硬座(23)" />

        <TextView
            android:id="@+id/rc_third"
            android:layout_toRightOf="@+id/rc_second"
            android:layout_marginLeft="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软卧(3)" />

        <TextView
            android:id="@+id/rc_fourth"
            android:layout_toRightOf="@+id/rc_third"
            android:layout_marginLeft="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无座(233)" />

    </RelativeLayout>


</RelativeLayout>
